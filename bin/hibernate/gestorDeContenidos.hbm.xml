<?xml version='1.0'?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="model">
	<class name="GestorDeContenidos" table="GESTORDECONTENIDOS">
		<id name="idGestorDeContenidos" column="ID_GESTORDECONTENIDOS">
			<generator class="native"/>
		</id>
	
		
		<many-to-one name="usuario" 
					 column="ID_USUARIO"
					 unique="true"
					 not-null="true"
					 cascade="all"/>		
		
		<many-to-one name="catalogo" 
					 column="ID_CATALOGO"
					 unique="true"
					 not-null="true"
					 cascade="all"/>
		
		<list name="reproducciones" table="REPRODUCCIONES" cascade="all" inverse="true">
			<key column="ID_GESTORDECONTENIDOS" not-null="true"/>
			<list-index column="ID_REPRODUCCION"/>
			<one-to-many class="Reproduccion" not-found="exception"/>
		</list>					
		
	</class>
</hibernate-mapping>