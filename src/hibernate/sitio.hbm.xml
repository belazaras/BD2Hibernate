<?xml version='1.0'?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="model">
	<class name="Sitio" table="SITIO">
		<id name="idSitio" column="ID_SITIO">
			<generator class="native"/>
		</id>
		<many-to-one name="catalogo" 
					 column="ID_CATALOGO"
					 unique="true"
					 not-null="true"
					 cascade="all"/>		
					 
		<list name="usuarios" table="USUARIOS_SITIO" cascade="all" inverse="true">
			<key column="ID_SITIO" not-null="true"/>
			<list-index column="ID_USUARIO" />
			<one-to-many class="Usuario" not-found="exception"/>
		</list>
	</class>
</hibernate-mapping>
